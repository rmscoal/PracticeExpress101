<html lang="en" dir="ltr">
  <head>
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="../js/home.js" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style media="screen">

    @import url('https://fonts.googleapis.com/css2?family=Ubuntu&display=swap');

    :root {
      	 --primary-light: #8abdff;
      	 --primary: #6d5dfc;
      	 --primary-dark: #5b0eeb;
      	 --white: #fff;
      	 --greyLight-1: #e4ebf5;
      	 --greyLight-2: #c8d0e7;
      	 --greyLight-3: #bec8e4;
      	 --greyDark: #9baacf;
      }
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Ubuntu';
      font-size: xx-large;
      color: black;
      margin: 0;
      padding: 0;
      background-color: #5ace97;
     }

     main {
       padding: 2%;
       overflow-x: auto;
     }

     h1 {
       font-size: 150%;
     }

     p {
       font-size: 75%;
     }

     form {
       margin: 0 20px;
     }

     .header {
       display: inline;
       text-align: center;
       margin-bottom: 20px;
     }

     .card {
       box-shadow: 5px 2.5px 5px 1px rgba(0, 0, 0, 0.5);
       border-radius: 5px;
       padding: 20px;
       margin-top: 20px;
     }

     .buttons {
       display: inline-flex;
       justify-content: center;
       margin: 20px 0;
       padding: 10px;
       width: 100%;
     }

     #login .buttons {
       width: auto;
     }

     #signup .buttons {
       width: auto;
     }

     .search-container {
       display: flex;
       max-width: 400px;
       max-height:none;
       justify-content: center;
       margin: 100px auto;
       background-color: white;
       padding: 10px;
       border-radius: 1rem;
       display: block;
       box-shadow: 0.1rem 0.1rem 0.1rem 0.1rem rgba(0,0,0,0.3);
     }

     .search-title {
       text-align: center;
       margin-top: 10px;
       padding: 5px;
     }

     .search-box {
       display: flex;
       justify-content: center;
       width: inherit;
     }

     /* SEARCH */
      .search {
     	 position: relative;
     	 display: flex;
     	 align-items: center;
       max-width: 50%;
     }
      .search__input {
     	 width: 20.4rem;
     	 height: 4rem;
     	 border: none;
     	 border-radius: 1rem;
     	 font-size: 1.4rem;
     	 padding-left: 3.8rem;
     	 box-shadow: inset 0.2rem 0.2rem 0.5rem var(--greyLight-2), inset -0.2rem -0.2rem 0.5rem var(--white);
     	 background: none;
     	 font-family: inherit;
     	 color: var(--greyDark);
     }
      .search__input::placeholder {
     	 color: var(--greyLight-3);
     }
      .search__input:focus {
     	 outline: none;
     	 box-shadow: 0.3rem 0.3rem 0.6rem var(--greyLight-2), -0.2rem -0.2rem 0.5rem var(--white);
     }
      .search__input:focus + .search__icon {
     	 color: var(--primary);
     }
      .search__icon {
     	 height: 2rem;
     	 position: absolute;
     	 font-size: 2rem;
     	 padding: 0 1rem;
     	 display: flex;
     	 color: var(--greyDark);
     	 transition: 0.3s ease;
     }

     #history-container {
       display: none;
       margin: 0 auto;
       width: 600px;
       max-height: 300px;
       overflow: scroll;
       padding: 10px;
       align-items: center;
       border-radius:1rem; 
       box-shadow: 0.1rem 0.1rem 0.1rem 0.1rem rgba(0,0,0,0.3);
       background-color:white;
     }

     .history-box {
       margin: auto 2px; 
       padding: 5px;
       box-shadow: 0 0 0.2rem 0 var(--greyDark);
       text-align: center;
     }

     .history-box a {
       text-decoration: none;
       color: black;
       font-size: 1rem;
       margin:0;
     }

     #results-container {
       display:none;
       max-width: 600px;
       max-height:900px;
       justify-content: center;
       margin: 20px auto;
       background-color: white;
       padding: 10px 20px 10px 20px; 
       border-radius: 1rem;
       box-shadow: 0.1rem 0.1rem 0.1rem 0.1rem rgba(0,0,0,0.3);
       overflow:scroll;
     }

     .result-box {
       margin-top: 10px; 
       padding: 10px;
       box-shadow: 0 0 0.2rem 0 var(--greyDark);
     }

     .result-box p {
       font-size: 2rem;
     }


     @media screen and (max-width: 1000px) {
         #content,
         aside {
             width: 100%;
             padding: 0;
         }
      }

    </style>
  </head>
  <body>
    <main>
      <% if (!locals.username || locals.username.length === 0) {%>
        <div class="header">
          <h1>Hello, welcome!</h1>
          <p>Struggling to Learn NodeJs? Sign up here to learn faster and become better!</p>
        </div>
        <div class = "buttons">
          <div id="login">
            <form method = "get" action="/login">
              <button type="submit" class="btn btn-light">Log In</button>
            </form>
          </div>
          <div id="signup">
            <form method = "get" action="/signup">
              <button type="submit" class="btn btn-light">Sign Up</button>
            </form>
          </div>
        </div>
      <% } else { %>
        <div class="header">
          <h1> Hello, <%= locals.username + '!' %> ðŸ‘» </h1>
          <p>Ready to take new challenges!!</p>
        </div>
        <!-- Progress bar-->
        <!-- <div class="card">
          <h2>Your progress</h2>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:60%">
              40%
            </div>
          </div>
        </div> -->
        <div class="buttons">
          <form method="post" action="/logout">
            <button type="submit" class="btn btn-light">Log Out</button>
          </form>
        </div>

        <div class="search-container">
          <div class="search-title">
            <h4>Search words in KBBI</h4>
          </div>
          <div class="search-box">
            <div class="search">
              <input type="text" class="search__input" id="input" placeholder="Search...">
              <div class="search__icon">
                <ion-icon name="search"></ion-icon>
              </div>
            </div>
          </div>
        </div>
        <!--This is the history container-->
        <div id="history-container"></div>
        <!--This is the result container-->
        <div id="results-container"></div>
      <%}%>
    </main>
  </body>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</html>
