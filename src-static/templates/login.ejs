<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
  <style>
  * {
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "segoe ui", roboto, oxygen, ubuntu, cantarell, "fira sans", "droid sans", "helvetica neue", Arial, sans-serif;
    font-size: 16px;
  }
  body {
      background-color: #435165;
  }
  .login {
    max-width: 600px;
    background-color: #ffffff;
    box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.3);
    margin: 100px auto;
    border-radius: 10px;
    padding-bottom: 10px;
  }
  .login h1 {
      text-align: center;
      color: #5b6574;
      font-size: 24px;
      padding: 20px 0 20px 0;
      border-bottom: 1px solid #dee0e4;
  }
  .login form {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      padding-top: 20px;
      border-radius: 10px;
  }

  #wrong {
    background-color: #fcd4dc;
  }

  #empty {
    background-color: #fcf3cb;
  }
  .login form label {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    background-color: white;
    color: #ffffff;
  }
  .login form input[type="password"], .login form input[type="text"] {
    min-width: 510px;
    height: 50px;
    border: 1px solid #dee0e4;
    border-radius: 25px;
    margin-bottom: 20px;
    margin-right: 20px;
    padding: 0 15px;
  }
  .login form input[type="submit"] {
    width: 100%;
    padding: 15px;
    margin: 20px 100px 10px 100px;
    background-color: rgba(40,44,52,255);
    border: 0;
    border-radius: 50px;
    cursor: pointer;
    font-weight: light;
    color: #ffffff;
    transition: background-color 0.2s;
  }
  .login form input[type="submit"]:hover {
    color: black;
    background-color: white;
    transition: background-color color 0.2s;
  }

  ion-icon {
    color: black;
  }

  .signupInstead {
    max-width: 400px;
    background-color: #ffffff;
    box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.3);
    margin: 100px auto;
    border-radius: 10px;
    padding: auto 10px;
    text-align: center;
  }

  .desc {
    padding-top: 10px;
  }

  .signupInstead form input[type="submit"] {
      width: 50%;
      padding: 15px;
      margin: 20px 100px 10px 100px;
      background-color: rgba(40,44,52,255);
      border: 0;
      border-radius: 50px;
      cursor: pointer;
      font-weight: light;
      color: #ffffff;
      transition: background-color 0.2s;
  }
  .signupInstead form input[type="submit"]:hover {
    color: black;
    background-color: white;
    transition: background-color color 0.2s;
  }

  </style>
</head>
<body>
  <% if (locals.verified  === false) { %>

    <div class="login">
      <form method = "post" action="login">

        <label for="username">
          <ion-icon name="person-circle-outline" size="large"></ion-icon>
        </label>
        <input type="text" id="wrong" placeholder="Username" name='username'></input>

        <label for="password">
          <ion-icon name="lock-closed-outline" size="large"></ion-icon>
        </label>
        <input type="password" id="wrong" placeholder="Password" name="password"></input>

        <input type="submit" value="Login">

      </form>
    </div>

    <div class="container">
      <div class="alert alert-danger">
        <strong>Error!</strong> Wrong username or password üßê!
      </div>
    </div>

  <% } %>

  <% if (locals.empty  === true) { %>
    <div class="login">
      <form method = "post" action="login">

        <label for="username">
          <ion-icon name="person-circle-outline" size="large"></ion-icon>
        </label>
        <input type="text" id="empty" placeholder="Username" name='username'></input>

        <label for="password">
          <ion-icon name="lock-closed-outline" size="large"></ion-icon>
        </label>
        <input type="password" id="empty" placeholder="Password" name="password"></input>

        <input type="submit" value="Login">

      </form>
    </div>

    <div class="container">
      <div class="alert alert-warning">
        <strong>Error!</strong> Please fill all the required filleds ü§¨!
      </div>
    </div>

  <% } if (locals.empty === false && locals.verified === null) {%>
    <div class="login">
      <form method = "post" action="login">

        <label for="username">
          <ion-icon name="person-circle-outline" size="large"></ion-icon>
        </label>
        <input type="text" placeholder="Username" name='username'></input>

        <label for="password">
          <ion-icon name="lock-closed-outline" size="large"></ion-icon>
        </label>
        <input type="password" placeholder="Password" name="password"></input>

        <input type="submit" value="Login">

      </form>
    </div>
  <% } %>

  <div class="signupInstead">
    <div class="desc">
      <h6> Sign up Instead!</h6>
    </div>
    <form method="get" action="signup">
      <input type="submit" value="Sign Up">
    </form>
  </div>

  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
