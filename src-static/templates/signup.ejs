<html>
<head>
  <title>Signup</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
  <style>
  * {
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "segoe ui", roboto, oxygen, ubuntu, cantarell, "fira sans", "droid sans", "helvetica neue", Arial, sans-serif;
    font-size: 16px;
  }
  body {
      background-color: rgba(40,44,52,255);
      justify-content: center;
  }
  .signup {
      max-width: 600px;
      background-color: #ffffff;
      box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.3);
      margin: 100px auto;
      border-radius: 10px;
      padding-bottom: 10px;
  }
  .signup h1 {
      text-align: center;
      color: #5b6574;
      font-size: 24px;
      padding: 20px 0 20px 0;
      border-bottom: 1px solid #dee0e4;
  }
  .signup form {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      padding-top: 20px;
      border-radius: 10px;
  }
  .signup form label {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 50px;
      height: 50px;
      background-color: white;
      color: #ffffff;
  }

  #wrong {
    background-color: #fcd4dc;
  }

  #empty {
    background-color: #fcf3cb;
  }

  .signup form input[type="password"], .signup form input[type="text"] {
      min-width: 510px;
      height: 50px;
      border: 1px solid #dee0e4;
      border-radius: 25px;
      margin-bottom: 20px;
      margin-right: 20px;
      padding: 0 15px;
  }
  .signup form input[type="submit"] {
      width: 100%;
      padding: 15px;
      margin: 20px 100px 10px 100px;
      background-color: rgba(40,44,52,255);
      border: 0;
      border-radius: 50px;
      cursor: pointer;
      font-weight: light;
      color: #ffffff;
      transition: background-color 0.2s;
  }
  .signup form input[type="submit"]:hover {
    color: black;
    background-color: white;
    transition: background-color color 0.2s;
  }

  ion-icon {
    color: black;
  }

  .loginInstead {
    max-width: 400px;
    background-color: #ffffff;
    box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.3);
    margin: 100px auto;
    border-radius: 10px;
    padding: auto 10px;
    text-align: center;
  }

  .desc {
    padding-top: 10px;
  }

  .loginInstead form input[type="submit"] {
      width: 50%;
      padding: 15px;
      margin: 20px 100px 10px 100px;
      background-color: rgba(40,44,52,255);
      border: 0;
      border-radius: 50px;
      cursor: pointer;
      font-weight: light;
      color: #ffffff;
      transition: background-color 0.2s;
  }
  .loginInstead form input[type="submit"]:hover {
    color: black;
    background-color: white;
    transition: background-color color 0.2s;
  }
  </style>
</head>
<body>
  <!-- if have filled before-->
  <% if (locals.haveFilled === true) { %>
    <% if (locals.empty === true ) { %>
      <div class="signup">
        <form method = "post" action="signup">
          <label for="username">
            <ion-icon name="person-circle-outline" size="large"></ion-icon>
          </label>
          <input type="text" id="empty" placeholder="<%= locals.username %>" name='username' value='<%= locals.username %>' ></input>

          <label for="email">
            <ion-icon name="mail-outline" size="large"></ion-icon>
          </label>
          <input type="text" id="empty" placeholder="<%= locals.email %>" name="email" value="<%= locals.email %>"></input>

          <label for="password">
            <ion-icon name="lock-closed-outline" size="large"></ion-icon>
          </label>
          <input type="password" id="empty" placeholder="<%= locals.password %>" name="password" value="<%= locals.password %>"></input>

          <input type="submit" value="Sign up">

        </form>
      </div>

      <div class="container">
        <div class="alert alert-warning">
          <strong>Error!</strong> Please fill in the fields ðŸ¤¬!
        </div>
      </div>
      <% } %>
      <% if (locals.exist === true) { %>

        <div class="signup">
          <form method = "post" action="signup">
            <label for="username">
              <ion-icon name="person-circle-outline" size="large"></ion-icon>
            </label>
            <input type="text" id="wrong" placeholder="<%= locals.username %>" name='username' value='<%= locals.username %>' ></input>

            <label for="email">
              <ion-icon name="mail-outline" size="large"></ion-icon>
            </label>
            <input type="text" id="wrong" placeholder="<%= locals.email %>" name="email" value="<%= locals.email %>"></input>

            <label for="password">
              <ion-icon name="lock-closed-outline" size="large"></ion-icon>
            </label>
            <input type="password"  placeholder="<%= locals.password %>" name="password" value="<%= locals.password %>"></input>

            <input type="submit" value="Sign up">

          </form>
        </div>

        <div class="container">
          <div class="alert alert-warning">
            <strong>Error!</strong> An email or username has been taken ðŸ˜³!
          </div>
        </div>
      <% } %>

      <% if (locals.validEmail === false) { %>

        <div class="signup">
          <form method = "post" action="signup">
            <label for="username">
              <ion-icon name="person-circle-outline" size="large"></ion-icon>
            </label>
            <input type="text" placeholder="<%= locals.username %>" name='username' value='<%= locals.username %>' ></input>

            <label for="email">
              <ion-icon name="mail-outline" size="large"></ion-icon>
            </label>
            <input type="text" id="wrong" placeholder="<%= locals.email %>" name="email" value="<%= locals.email %>"></input>

            <label for="password">
              <ion-icon name="lock-closed-outline" size="large"></ion-icon>
            </label>
            <input type="password" placeholder="<%= locals.password %>" name="password" value="<%= locals.password %>"></input>

            <input type="submit" value="Sign up">

          </form>
        </div>

        <div class="container">
          <div class="alert alert-danger">
            <strong>Error!</strong> Enter a valid email ðŸ™ƒ! Reason: <%= locals.message %>
            <% if (locals.message == 'Mailbox not found.') { %>
              If you think you have entered a valid email, please enter another email that you are actively using!
            <% } %>
          </div>
        </div>
      <% } %>
    <% } else { %>
    <!-- new to the page -->
    <div class="signup">
      <form method = "post" action="signup">

        <label for="username">
          <ion-icon name="person-circle-outline" size="large"></ion-icon>
        </label>
        <input type="text" placeholder="Username" name='username'></input>

        <label for="email">
          <ion-icon name="mail-outline" size="large"></ion-icon>
        </label>
        <input type="text" placeholder="Email" name="email"></input>

        <label for="password">
          <ion-icon name="lock-closed-outline" size="large"></ion-icon>
        </label>
        <input type="password" placeholder="Password" name="password"></input>

        <input type="submit" value="Sign up">

      </form>
    </div>
  <% } %>

  <div class="loginInstead">
    <div class="desc">
      <h6> Login Instead!</h6>
    </div>
    <form method="get" action="login">
      <input type="submit" value="Log In">
    </form>
  </div>

  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
